<div id="user_bar">
<% if signed_in? -%>
  <div id="user-bar-greeting">Hi, <%= link_to current_user.username, user_path(current_user) %>! (<%= link_to "Settings", edit_user_path(current_user) %>)</div>
  <div id="user-bar-action"  >
    <%= link_to "Log out", destroy_session_path %>
    &bull; <%= link_to "Halp!", help_path %>
    &bull; <%= link_to "About", about_path %></div>
<% else -%>
  <div id="user-bar-action"  ><%= link_to "Log in with twitter",  new_session_path %></div>
<% end -%>
</div>